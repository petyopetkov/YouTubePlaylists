doctype
html
    head
        title YouTube Playlists
        link(rel="stylesheet" href="/lib/bootstrap-3.3.6/css/bootstrap.min.css")
        link(rel="stylesheet" href="/lib/bootstrap-3.3.6/css/bootstrap-theme.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav.navbar-inverse
            .container
                .navbar-header
                    a.navbar-brand(href="/") YouTube Playlists
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/") Home
                        li
                            a(href="/playlists") Playlists
                        if (currentUser)
                            li
                                a(href="/profile") #{currentUser.username}
                            li
                                a(href="/logout") Logout
                        else
                            li
                                a(href="/register") Register
                            li
                                a(href="/login") Login
        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}
            block main-content

        footer
            p.text-center
                | &copy; Telerik Academy 2016

        include scripts
